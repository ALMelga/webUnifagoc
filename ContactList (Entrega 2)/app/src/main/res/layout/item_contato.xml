<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/contato_foto"
        android:layout_width="49dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="1dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nome_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Fulano de tal"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/telefone_contato"
        app:layout_constraintTop_toTopOf="@+id/contato_foto"
        tools:layout_editor_absoluteX="60dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/telefone_contato"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_editar_24" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#F62020"
        android:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="@+id/contato_foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contato_foto"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_excluir_24" />

    <TextView
        android:id="@+id/email_contato"
        android:layout_width="109dp"
        android:layout_height="13dp"
        android:text="fulanodetal@email.com"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/contato_foto"
        tools:layout_editor_absoluteX="60dp" />

    <TextView
        android:id="@+id/telefone_contato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="3200000000"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/email_contato"
        app:layout_constraintTop_toBottomOf="@+id/nome_contato"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="60dp" />
</androidx.constraintlayout.widget.ConstraintLayout>